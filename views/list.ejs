<%-include("header")-%>

    <div class="box" id="heading">
      <h1> <%=listtitle%></h1>
    </div>

<div class="box">

  <%newlistitem.forEach(function(newitem){%>

    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%=newitem._id%>" onChange="this.form.submit()">
        <p><%=newitem.name%></p>
      </div>
      <input type="hidden" name="listName" value="<%=listtitle%>"></input>
      <input type="hidden" name="username" value="<%=username%>"></input>
    </form>

  <%})%>

    <form class="item" action="/user/<%=username%>" method="post">
      <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
      <button class="listbtn" type="submit" name="list" value="<%=listtitle%>">+</button>
    </form>

</div>

<%-include("footer")-%>
